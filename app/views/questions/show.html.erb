<% content_for :title, "Question | StackOverflow" %>

<h1><%= @question.inquiry %><small> - <%= @question.user.username %></small></h1>

<% if user_signed_in? && current_user.username == @question.user.username %>
  <%= link_to "Edit question", edit_question_path(@question) %>
<% end %>

<div class="lead">
  <%= simple_format(@question.post) %> 
</div>

<% if @comments.any? %>
  <h3><%= pluralize(@comments.size, 'Answer') %> <small><%= link_to "Answer this question", new_question_comment_path(@question) %></small></h3>

  <ul class="list-unstyled">
    <% @comments.each do |comment| %>
      <li class="well well-sm"><%= simple_format(comment.answer) %> <br />
      - <%= comment.user.username %>
        <% if user_signed_in? && current_user.username == comment.user.username %>
          <%= link_to "Edit", edit_question_comment_path(@question, comment) %> |
          <%= link_to "Delete", question_comment_path(@question, comment),
                                :data => { :confirm => "You sure?",
                                           :method => "delete"} %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p><%= link_to "Be the first to answer this question", new_question_comment_path(@question) %></p>
<% end %>